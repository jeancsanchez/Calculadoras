<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <include
        android:id="@+id/include_card"
        layout="@layout/partial_resultado" />

    <Button
        android:id="@+id/btnUm"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginEnd="10dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/btnDois"
        app:layout_constraintEnd_toStartOf="@id/btnDois"
        app:layout_constraintTop_toTopOf="@id/btnDois" />


    <Button
        android:id="@+id/btnDois"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@id/btnCinco"
        app:layout_constraintEnd_toEndOf="@id/btnCinco"
        app:layout_constraintStart_toStartOf="@id/btnCinco" />


    <Button
        android:id="@+id/btnTres"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/btnDois"
        app:layout_constraintStart_toEndOf="@id/btnDois"
        app:layout_constraintTop_toTopOf="@id/btnDois" />


    <Button
        android:id="@+id/btnQuatro"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginEnd="10dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@id/btnCinco"
        app:layout_constraintEnd_toStartOf="@id/btnCinco"
        app:layout_constraintTop_toTopOf="@id/btnCinco" />


    <Button
        android:id="@+id/btnCinco"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_card" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/btnCinco"
        app:layout_constraintStart_toEndOf="@id/btnCinco"
        app:layout_constraintTop_toTopOf="@id/btnCinco" />


    <Button
        android:id="@+id/btnSete"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginEnd="10dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/btnOito"
        app:layout_constraintEnd_toStartOf="@id/btnOito"
        app:layout_constraintTop_toTopOf="@id/btnOito" />


    <Button
        android:id="@+id/btnOito"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:text="8"
        app:layout_constraintEnd_toEndOf="@id/btnCinco"
        app:layout_constraintStart_toStartOf="@id/btnCinco"
        app:layout_constraintTop_toBottomOf="@id/btnCinco" />


    <Button
        android:id="@+id/btnNove"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/btnOito"
        app:layout_constraintStart_toEndOf="@id/btnOito"
        app:layout_constraintTop_toTopOf="@id/btnOito" />


    <Button
        android:id="@+id/btnZero"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@id/btnOito"
        app:layout_constraintStart_toStartOf="@id/btnOito"
        app:layout_constraintTop_toBottomOf="@id/btnOito" />

    <Button
        android:id="@+id/btnSoma"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"

        android:text="+"
        app:layout_constraintBottom_toTopOf="@id/btnUm"
        app:layout_constraintEnd_toEndOf="@id/btnUm"
        app:layout_constraintStart_toStartOf="@id/btnUm" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@id/btnZero"
        app:layout_constraintStart_toEndOf="@id/btnZero"
        app:layout_constraintTop_toTopOf="@id/btnZero" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="@id/btnZero"
        app:layout_constraintEnd_toStartOf="@id/btnZero"
        app:layout_constraintTop_toTopOf="@id/btnZero" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@id/btnDois"
        app:layout_constraintBottom_toTopOf="@id/btnDois"
        app:layout_constraintEnd_toEndOf="@id/btnDois"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        app:layout_constraintStart_toStartOf="@id/btnDois" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="@id/btnTres"
        app:layout_constraintBottom_toTopOf="@id/btnTres"
        app:layout_constraintEnd_toEndOf="@id/btnTres"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        app:layout_constraintStart_toStartOf="@id/btnTres" />

</android.support.constraint.ConstraintLayout>