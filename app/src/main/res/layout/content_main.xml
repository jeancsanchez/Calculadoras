<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/btnUm"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDois"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/btnUm" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="pa"
        app:layout_constraintStart_toEndOf="@id/btnDois" />

    <Button
        android:id="@+id/btnQuatro"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnUm" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/btnQuatro"
        app:layout_constraintTop_toBottomOf="@id/btnDois" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/btnCinco"
        app:layout_constraintTop_toBottomOf="@id/btnTres" />

    <Button
        android:id="@+id/btnSete"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnQuatro" />

    <Button
        android:id="@+id/btnOito"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/btnSete"
        app:layout_constraintTop_toBottomOf="@id/btnCinco" />

    <Button
        android:id="@+id/btnNove"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/btnOito"
        app:layout_constraintTop_toBottomOf="@id/btnSeis" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="@dimen/botao_largura"
        android:layout_height="@dimen/botao_altura"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/btnNove"
        app:layout_constraintStart_toStartOf="@id/btnSete"
        app:layout_constraintTop_toBottomOf="@id/btnOito" />

</android.support.constraint.ConstraintLayout>